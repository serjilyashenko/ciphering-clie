{
  "name": "ciphering-cli",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node ./index.js",
    "format": "prettier --write \"**/*.+(js|json|css|html|md)\"",
    "format:check": "prettier --list-different \"**/*.+(js|json|css|html|md)\"",
    "lint:check": "eslint .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pre-commit-hook": "lint-staged",
    "githook:init": "echo \"#!/bin/sh \n\nnpm run pre-commit-hook \" > .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit",
    "postinstall": "npm run githook:init"
  },
  "lint-staged": {
    "**/*.+(js|json|css|html|md)": [
      "prettier --list-different"
    ],
    "**/*.+(js)": [
      "eslint"
    ]
  },
  "keywords": [],
  "author": "Sergio Ilyashenko",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "lint-staged": "^11.2.6",
    "prettier": "^2.4.1"
  }
}
